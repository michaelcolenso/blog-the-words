<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>TITLE</title>
  <meta name="description" content="<%- description %>">
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" href="https://michaelcolenso.github.io/blog-the-words/css/main.css">
  <link href="webfonts/ss-standard.css" rel="stylesheet">
  <link rel="stylesheet" href="//cloud.typography.com/7039052/624944/css/fonts.css" />
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/default.min.css">

  <meta property="og:title" content="TITLE" />
  <meta property="og:description" content="<%- description %>" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="http://colenso.org/" />
  <meta property="og:image" content="http://colenso.org/apple-touch-icon.png" />
  <meta property="og:site_name" content="<%- site %>" />
</head>
<body>

  <div class="wrapper">
    <div class="header">
      <div class="container">
        <div class="row">
          <div class="col-md-2 col-sm-3">
            <h1 class="header-logo"><a href="/"><%- site %></a></h1>
          </div>

          <div class="col-md-8 col-sm-7">
            <%- partial("_shared/_navigation") %>
          </div>

          <div class="col-md-2 col-sm-2">
            <%- partial("_shared/_social") %>
          </div>

        </div>
      </div>
    </div>

    <div class="main" role="main">
      <div class="container">
        <div class="row">
          <% if(current.published !== false || environment=='development') { %>
            <% var post_view = (current.path[0] == "projects" || current.path[0] == "articles") && current.path[1] != "index" %>
            <% if(post_view) { %>
              <%- partial("_partials/_content") %>
            <% } else { %>
              <%- yield %>
            <% } %>
          <% } else { %>
            <%- partial("404") %>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="visible-xs">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <%- partial("_shared/_social") %>
        </div>
      </div>
    </div>
  </div>

  <script src="http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/highlight.min.js"></script>
  <script>hljs.initHighlightingOnLoad();</script>

</body>
</html>
