<div class="col-md-2">
  <div class="sidebar">
    <h3><%- partial("../_shared/_tagline") %></h3>
  </div>
</div>
<div class="col-md-offset-1 col-md-9">
  
  <div class="projects">
    <h2>I make fancy maps.</h2>
    <div class="row">
      <% for(slug in public.projects._data) { %>
        <% if(slug != "index") { %>
          <% var project = public.projects._data[slug] %>
          <% if(project.published !== false || environment=='development') { %>
            <% var classes = project.published == false ? 'unpublished' : '' %>
            <div class="col-md-6 col-sm-6">
              <a href="/projects/<%- slug %>.html" class="project <%- classes %>">
                <div class="project-image">
                  <img class="img-responsive" src="/images/<%- slug %>.png" title="<%- project.title %>" %>
                  <div class="project-tagline"><%- project.tagline %></div>
                </div>
                <h2 class="project-title"><%- project.title %></h2>
                <h3 class="project-date"><%- project.date %></h3>
              </a>
            </div>
          <% } %>
        <% } %>
      <% } %>
    </div>
  </div>
</div>
