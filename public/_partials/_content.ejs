<div class="col-md-offset-3 col-md-9">
  <div class="heading">
    <ul class="list-unstyled meta-header">
      <li><h1 class="meta-title"><%- title %></h1><li>
      <% if(typeof tagline != "undefined") { %>
        <li class="meta-tagline"><%- tagline %></li>
      <% } %>
    </ul>
  </div>
</div>
<div class="col-md-2">
  <div class="sidebar">
    <p><%- partial("../_shared/_tagline") %></p>
  </div>
</div>

<% if(current.path[0] == "projects") { %>
  <div class="col-md-6">
    <% if(typeof link != "undefined") { %>
      <a href="<%- link %>">
    <% } %>
      <img class="img-responsive project-hero" src="/images/<%- slug %>.png" />
    <% if(typeof link != "undefined") { %>
      </a>
    <% } %>
  </div>
  <div class="col-md-4">
    <div class="content">
      <%- yield %>
      <% if(typeof link != "undefined") { %>
        <a class="project-link" href="<%- link %>"><span class="icon">link</span> View the project</a> 
      <% } %>
    </div>
    <%- partial("_meta_footer") %>
  </div>

<% } else { %>

  <div class="col-md-offset-1 col-md-8">
    <div class="content">
      <%- yield %>
    </div>
    <%- partial("_meta_footer") %>
  </div>

<% } %>
